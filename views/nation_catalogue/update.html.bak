{{extend 'layout.html'}}
<style>
    body{
        background-color: #F1F6F8;
    }
    #formBox{
        border: 5px solid #0d6e10;
        padding: 10px;
        -webkit-box-shadow:inset 0 0 10px #000;
        -moz-box-shadow:inset 0 0 10px #000;
        box-shadow:inset 0 0 10px #000;
        background-color: #EEF6FA;
    }
    #formBox label{
        font-weight: bold;
    }
    #formBox input, #formBox select, #formBox textarea{
       -webkit-box-shadow:inset 0 0 4px #000;
       -moz-box-shadow:inset 0 0 4px #000;
       box-shadow:inset 0 0 4px #000;
    }
    #formBox select{
        width: 200px;
    }
    #nation_nation_birth_year, #nation_nation_end_year, #nation_nation_date_added{
        width:150px;
    }
    .custom_nation_flag_box{
       -webkit-box-shadow:inset 0 0 4px #0d6e10 !important;
       -moz-box-shadow:inset 0 0 4px #0d6e10 !important;
       box-shadow:inset 0 0 4px #0d6e10 !important;
    }
    
    .customSubmitButton{
       -webkit-box-shadow:inset 0 0 4px #0d6e10 !important;
       -moz-box-shadow:inset 0 0 4px #0d6e10 !important;
       box-shadow:inset 0 0 4px #0d6e10 !important;
       width:80px;
       background-color: #E3D8D6;
       color: green;
    }
    /* ID should be hidden */
    #nation_id__row{
        display: none;
    }
</style>
<div id="formBox">
    <h1>Update Nation</h1>
    <hr>
    <!-- Automatic form from the controller -->
    {{=form}}
</div>
